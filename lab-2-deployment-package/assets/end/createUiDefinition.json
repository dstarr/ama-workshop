{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
      "basics": [
        {
          "name": "username",
          "type": "Microsoft.Common.TextBox",
          "label": "User name",
          "defaultValue": "",
          "toolTip": "Use only allowed characters",
          "constraints": {
            "required": true,
            "regex": "^[a-z0-9A-Z]{6,30}$",
            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 6-30 characters long."
          },
          "visible": true
        },
        {
          "name": "password",
          "type": "Microsoft.Compute.CredentialsCombo",
          "label": {
            "password": "Password",
            "confirmPassword": "Confirm password"
          },
          "toolTip": {
            "password": "Provide a password"
          },
          "constraints": {
            "required": true
          },
          "options": {
            "hideConfirmation": false
          },
          "osPlatform": "Windows",
          "visible": true
        },
        {
          "name": "itemPrefix",
          "type": "Microsoft.Common.TextBox",
          "label": "Item prefix",
          "defaultValue": "",
          "toolTip": "The prefix pre-prended to all created resources in the solution.",
          "constraints": {
            "required": true,
            "regex": "^[a-zA-Z|[a-zA-Z0-9]{2}$",
            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 3 characters long."
          },
          "visible": true
        }
      ],
      "steps": [
        {
            "name": "storageConfig",
            "label": "Storage account settings",
            "elements": [
                {
                    "name": "storageAccount",
                    "type": "Microsoft.Storage.MultiStorageAccountCombo",
                    "label": {
                        "prefix": "Storage account name",
                        "type": "Storage account type"
                    },
                    "toolTip": {
                        "prefix": "The name of the storage account",
                        "type": "The type of storage account"
                    },
                    "defaultValue": {
                        "type": "Standard_LRS"
                    },
                    "constraints": {
                        "allowedTypes": [
                            "Premium_LRS",
                            "Standard_LRS",
                            "Standard_GRS"
                        ]
                    }
                }
            ]
        },
        {
            "name": "tags",
            "label": "Tags",
            "elements": [
                {
                    "name": "tagsByResource",
                    "type": "Microsoft.Common.TagsByResource",
                    "toolTip": "Tags for resources being created",
                    "resources": [
                        "Microsoft.Storage/storageAccounts",
                        "Microsoft.Compute/virtualMachines"
                    ]
                }
            ]
        }
      ],
      "outputs": {
        "adminPassword": "[basics('password').password]",
        "adminUsername": "[basics('username')]",
        "itemPrefix": "[basics('itemPrefix')]",
        "location": "[location()]",
        "storageAccountName": "[steps('storageConfig').storageAccount.prefix]",
        "storageAccountType": "[steps('storageConfig').storageAccount.type]"
      }
    }
  }